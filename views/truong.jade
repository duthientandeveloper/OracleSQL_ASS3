extends layout

block content
  .row
    .col-md-3
      br
      p.lead Thông Tin Tuyển Sinh
        |                 
        .list-group
        - if(user.privilege=='Admin'){
          a.list-group-item.active(href='/truong') Danh Sách Trường
          |                     
          a.list-group-item(href='/nganh') Danh Sách Ngành Thi
          |                     
          a.list-group-item(href='/khoi') Danh Sách Khối Thi
          |                     
          a.list-group-item(href='/thisinh') Danh Sách Thí Sinh
          |                     
          a.list-group-item(href='/hsthisinh') Danh Sách Hồ Sơ Thí Sinh
          |                     
          a.list-group-item(href='/tttuyensinh') Thông Tin Tuyen Sinh
          |                     
          a.list-group-item(href='/ketquathi') Danh Sách Kết Quả Thi
          |                     
          a.list-group-item(href='/timkiem') Tìm Kiếm Thí Sinh
          |                     
          a.list-group-item(href='/dsthido') Danh Sách Thi Đỗ Đại Học
        - } else if (user.privilege=='Tuyensinh'){
          a.list-group-item.active(href='/truong') Danh Sách Trường
          |                     
          a.list-group-item(href='/nganh') Danh Sách Ngành Thi
          |                     
          a.list-group-item(href='/khoi') Danh Sách Khối Thi
        - } else{
          a.list-group-item(href='/thisinh') Danh Sách Thí Sinh
          |                     
          a.list-group-item(href='/hsthisinh') Danh Sách Hồ Sơ Thí Sinh
          |                     
          a.list-group-item(href='/tttuyensinh') Thông Tin Tuyen Sinh
          |                     
          a.list-group-item(href='/ketquathi') Danh Sách Kết Quả Thi
          |                     
          a.list-group-item(href='/timkiem') Tìm Kiếm Thí Sinh
          |                     
          a.list-group-item(href='/dsthido') Danh Sách Thi Đỗ Đại Học
        - }
    .col-md-9
      br
      h1 Thông Tin Trường Tổ Chức Tuyển Sinh
      table.hyper(cellspacing='0', width='100%')
        thead
            tr
            th Mã Trường
            |                 
            th Tên Trường
            |                 
            th Địa Chỉ
            |                 
            th Mục Tiêu
        - if (arr.length){
        each item in arr
            tr
                td= item.id
                td= item.name
                td= item.address
                td= item.target
                td 
                    a(href='/truong/update?id='+item.id) Update 
                td 
                    a(href='/truong/delete?id='+item.id) Delete
                    
        - }
      br
      a(href='/truong/new') New 
        
            