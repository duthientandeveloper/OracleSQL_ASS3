extends layout

block content
  .row
    .col-md-3
      br
      p.lead Thông Tin Tuyển Sinh
        | 
        .list-group                 
        - if(user.privilege=='Admin'){
          a.list-group-item(href='/truong') Danh Sách Trường
          |                     
          a.list-group-item(href='/nganh') Danh Sách Ngành Thi
          |                     
          a.list-group-item(href='/khoi') Danh Sách Khối Thi
          |                     
          a.list-group-item(href='/thisinh') Danh Sách Thí Sinh
          |                     
          a.list-group-item(href='/hsthisinh') Danh Sách Hồ Sơ Thí Sinh
          |                     
          a.list-group-item(href='/tttuyensinh') Thông Tin Tuyen Sinh
          |                     
          a.list-group-item(href='/ketquathi') Danh Sách Kết Quả Thi
          |                     
          a.list-group-item(href='/timkiem') Tìm Kiếm Thí Sinh
          |                     
          a.list-group-item.active(href='/dsthido') Danh Sách Thi Đỗ Đại Học
        - } else if (user.privilege=='Tuyensinh'){
          a.list-group-item(href='/truong') Danh Sách Trường
          |                     
          a.list-group-item(href='/nganh') Danh Sách Ngành Thi
          |                     
          a.list-group-item(href='/khoi') Danh Sách Khối Thi
        - } else{
          a.list-group-item(href='/thisinh') Danh Sách Thí Sinh
          |                     
          a.list-group-item(href='/hsthisinh') Danh Sách Hồ Sơ Thí Sinh
          |                     
          a.list-group-item(href='/tttuyensinh') Thông Tin Tuyen Sinh
          |                     
          a.list-group-item(href='/ketquathi') Danh Sách Kết Quả Thi
          |                     
          a.list-group-item(href='/timkiem') Tìm Kiếm Thí Sinh
          |                     
          a.list-group-item.active(href='/dsthido') Danh Sách Thi Đỗ Đại Học
        - }
    .col-md-9
        br
        h1 Danh Sách Thí Sinh Đậu Đại Học
        - if(arr==undefined){
            form(method='post', action='/dsthido', enctype='multipart/form-data')
                .form-group
                    label Trường Đại Học
                    select.selectpicker(name='id')
                        - if(schools){
                        each school in schools
                            option(value=school.id)= school.name    
                        -} 
                input.btn.btn-default(name='submit', type='submit', value='Tìm Kiếm')
        -}
        - if(arr!=undefined){
            table.hyper(cellspacing='0', width='100%')
                thead
                    tr
                    th ID
                    | 
                    th Họ Tên
                    |                 
                    th Tổng Điểm
                    |                 
                    th Điểm Đậu
                - if (arr.length){
                each item in arr
                    tr
                        td= item.id
                        td= item.name
                        td= item.total
                        td= item.sroce 
                - }
        - }
