extends layout

block content
    .row
        .col-md-3
            br
            p.lead Thông Tin Tuyển Sinh
                |                 
                .list-group
                - if(user.privilege=='Admin'){
                    a.list-group-item(href='/truong') Danh Sách Trường
                    |                     
                    a.list-group-item(href='/nganh') Danh Sách Ngành Thi
                    |                     
                    a.list-group-item(href='/khoi') Danh Sách Khối Thi
                    |                     
                    a.list-group-item(href='/thisinh') Danh Sách Thí Sinh
                    |                     
                    a.list-group-item(href='/hsthisinh') Danh Sách Hồ Sơ Thí Sinh
                    |                     
                    a.list-group-item(href='/tttuyensinh') Thông Tin Tuyen Sinh
                    |                     
                    a.list-group-item(href='/ketquathi') Danh Sách Kết Quả Thi
                    |                     
                    a.list-group-item(href='/timkiem') Tìm Kiếm Thí Sinh
                    |                     
                    a.list-group-item(href='/dsthido') Danh Sách Thi Đỗ Đại Học
                - } else if (user.privilege=='Tuyensinh'){
                    a.list-group-item(href='/truong') Danh Sách Trường
                    |                     
                    a.list-group-item(href='/nganh') Danh Sách Ngành Thi
                    |                     
                    a.list-group-item(href='/khoi') Danh Sách Khối Thi
                - } else{
                    a.list-group-item(href='/thisinh') Danh Sách Thí Sinh
                    |                     
                    a.list-group-item(href='/hsthisinh') Danh Sách Hồ Sơ Thí Sinh
                    |                     
                    a.list-group-item(href='/tttuyensinh') Thông Tin Tuyen Sinh
                    |                     
                    a.list-group-item(href='/ketquathi') Danh Sách Kết Quả Thi
                    |                     
                    a.list-group-item(href='/timkiem') Tìm Kiếm Thí Sinh
                    |                     
                    a.list-group-item(href='/dsthido') Danh Sách Thi Đỗ Đại Học
                - }
        .col-md-9
            ul.errors  
            br
            h1 Cập Nhật Thông Tin Tuyển Sinh
            if errors
                    each error, i in errors
                        li.alert.alert-danger #{error.msg}
            form(method='post', action='/tttuyensinh/update', enctype='multipart/form-data')
                .form-group
                    label Mã Trường
                    input.form-control(name='idSchool',type='text',placeholder='Mã Trường', readonly,value=''+(arr==undefined?'':arr.idSchool) )
                .form-group
                    label Mã Ngành
                    input.form-control(name='id',type='text',placeholder='Mã Ngành', readonly,value=''+(arr==undefined?'':arr.id))
                .form-group
                    label Tên Khối
                    input.form-control(name='nameUnit',type='text',placeholder='Tên Khối', readonly,value=''+(arr==undefined?'':arr.nameUnit))
                .form-group
                    label Tỉ Lệ Chọi
                    input.form-control(name='ratio',type='text',placeholder='Tên Khối', readonly,value=''+(arr==undefined?'':arr.ratio))
                .form-group
                    label Điểm Chuẩn Năm Ngoái
                    input.form-control(name='srocelater',type='text',placeholder='Điểm Chuẩn Năm Ngoái', readonly,value=''+(arr==undefined?'':arr.srocelater))
                .form-group
                    label Chỉ Tiêu
                    input.form-control(name='target',type='text',placeholder='Chỉ Tiêu', readonly,value=''+(arr==undefined?'':arr.target))
                .form-group 
                    label Điểm Nguyện Vọng 1
                    input.form-control(name='aspiration1',type='text',placeholder='Điểm Nguyện Vọng 1',value=''+(arr==undefined?'':arr.aspiration1))
                .form-group
                    label Điểm Nguyện Vọng 2
                    input.form-control(name='aspiration2',type='text',placeholder='Điểm Nguyện Vọng 2',value=''+(arr==undefined?'':arr.aspiration2))
                .form-group
                    label Điểm Nguyện Vọng 3
                    input.form-control(name='aspiration3',type='text',placeholder='Điểm Nguyện Vọng 3',value=''+(arr==undefined?'':arr.aspiration3))
                input.btn.btn-default(name='submit', type='submit', value='Cập Nhật')