extends layout

block content
    .row
        .col-md-3
            br
            p.lead Thông Tin Tuyển Sinh
                |                 
                .list-group
                - if(user.privilege=='Admin'){
                    a.list-group-item(href='/truong') Danh Sách Trường
                    |                     
                    a.list-group-item(href='/nganh') Danh Sách Ngành Thi
                    |                     
                    a.list-group-item(href='/khoi') Danh Sách Khối Thi
                    |                     
                    a.list-group-item(href='/thisinh') Danh Sách Thí Sinh
                    |                     
                    a.list-group-item(href='/hsthisinh') Danh Sách Hồ Sơ Thí Sinh
                    |                     
                    a.list-group-item(href='/tttuyensinh') Thông Tin Tuyen Sinh
                    |                     
                    a.list-group-item(href='/ketquathi') Danh Sách Kết Quả Thi
                    |                     
                    a.list-group-item(href='/timkiem') Tìm Kiếm Thí Sinh
                    |                     
                    a.list-group-item(href='/dsthido') Danh Sách Thi Đỗ Đại Học
                - } else if (user.privilege=='Tuyensinh'){
                    a.list-group-item(href='/truong') Danh Sách Trường
                    |                     
                    a.list-group-item(href='/nganh') Danh Sách Ngành Thi
                    |                     
                    a.list-group-item(href='/khoi') Danh Sách Khối Thi
                - } else{
                    a.list-group-item(href='/thisinh') Danh Sách Thí Sinh
                    |                     
                    a.list-group-item(href='/hsthisinh') Danh Sách Hồ Sơ Thí Sinh
                    |                     
                    a.list-group-item(href='/tttuyensinh') Thông Tin Tuyen Sinh
                    |                     
                    a.list-group-item(href='/ketquathi') Danh Sách Kết Quả Thi
                    |                     
                    a.list-group-item(href='/timkiem') Tìm Kiếm Thí Sinh
                    |                     
                    a.list-group-item(href='/dsthido') Danh Sách Thi Đỗ Đại Học
                - }
        .col-md-9
            ul.errors  
            br
            h1= (arr==undefined?'Tạo Mới Ngành Tổ Chức Tuyển Sinh':'Cập Nhật Ngành Tổ Chức Tuyển Sinh')
            if errors
                    each error, i in errors
                        li.alert.alert-danger #{error.msg}
            form(method='post', action=(isNew==undefined?'/nganh/update?idSchool='+arr.idSchool+'&id='+arr.id:'/nganh/new'), enctype='multipart/form-data')
                .form-group
                    label Mã Trường
                    input.form-control(name='idSchool',type='text',placeholder='Mã Trường',value=''+(arr==undefined?'':arr.idSchool))
                .form-group
                    label Mã Ngành
                    input.form-control(name='id',type='text',placeholder='Mã Ngành',value=''+(arr==undefined?'':arr.id))     
                .form-group
                    label Tên Ngành
                    input.form-control(name='name',type='text',placeholder='Tên Ngành',value=''+(arr==undefined?'':arr.name))
                .form-group
                    label Thông Tin Tuyển Sinh
                    input.form-control(name='info',type='text',placeholder='Thông Tin Tuyển Sinh',value=''+(arr==undefined?'':arr.info))
                .form-group
                    label Đề Cương Đào Tạo
                    input.form-control(name='outline',type='text',placeholder='Đề Cương Đào Tạo',value=''+(arr==undefined?'':arr.outline))
                input.btn.btn-default(name='submit', type='submit', value=(arr==undefined?'Tạo Mới':'Cập Nhật'))